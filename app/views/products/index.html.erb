<div class="page-header">
  <%= link_to new_product_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Produto
  <% end %>
  <h3>Lista de Produtos</h3>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr>
            <th>Produto</th>
            <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @products) do |product| %>
            <td><%= product.nome_produto %></td>
            <td align='right'>
              <div class="btn-group">
                  <%= link_to product, class: "btn btn-default btn-sm" do %>
                    <span class="glyphicon glyphicon-list-alt text-success"></span> Exibir
                  <% end %>
                  <%= link_to  edit_product_path(product) , class: "btn btn-default btn-sm" do %>
                    <span class="glyphicon glyphicon-pencil text-primary"></span> Editar
                  <% end %>
                 <%= link_to product, method: :delete, data: { confirm: 'Deseja excluir o registro?' }, class: "btn btn-default btn-sm" do %>
                    <span class="glyphicon glyphicon-trash text-danger"></span> Excluir
                  <% end %>
              </div>
            </td>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
