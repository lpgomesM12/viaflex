<%= form_for(@client, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @client.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <!-- <h4><%#= pluralize(@client.errors.count, "erro") %> Corrija os erros:</h4> -->

      <ul>
      <% @client.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="col-sm-2 control-label">Nome</label>
    <div class="col-sm-10">
      <%= f.text_field :nome, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">CPF</label>
    <div class="col-sm-4">
      <%= f.text_field :cpf, class: "form-control" %>
    </div>
    <label class="col-sm-1 control-label">RG</label>
    <div class="col-sm-3">
      <%= f.text_field :rg, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Telefone1</label>
    <div class="col-sm-3">
      <%= f.text_field :telefone1, class: "form-control" %>
    </div>
    <label class="col-sm-1 control-label">Telefone2</label>
    <div class="col-sm-3">
      <%= f.text_field :telefone2, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">UF</label>
    <div class="col-sm-1">
      <%= f.text_field :desc_uf, class: "form-control" %>
    </div>
     <label class="col-sm-1 control-label">Cidade</label>
    <div class="col-sm-8">
      <%= f.text_field :nome_cidade, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Endereço</label>
    <div class="col-sm-10">
      <%= f.text_field :desc_endereco, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Bairro</label>
    <div class="col-sm-6">
      <%= f.text_field :nome_bairro, class: "form-control" %>
    </div>
     <label class="col-sm-1 control-label">Número</label>
     <div class="col-sm-1">
       <%= f.text_field :numr_endereco, class: "form-control" %>
     </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">CEP</label>
    <div class="col-sm-2">
      <%= f.text_field :desc_cep, class: "form-control" %>
    </div>
    <label class="col-sm-2 control-label">Ponto referência</label>
    <div class="col-sm-6">
      <%= f.text_field :desc_pontoreferencia, class: "form-control" %>
    </div>
  </div>
  <hr>
  <h4>Situação Cadastral Financeira do Cliente</h4><br>
  <div class="form-group">
    <label class="col-sm-2 control-label">Situação Cliente</label>
    <div class="col-sm-2">
      <%= f.collection_select :situacao, Client::SITUACAO, :to_s, :humanize,{},{ :class => 'form-control' }%>
    </div>
    <label class="col-sm-2 control-label">Observação Cliente</label>
    <div class="col-sm-6">
      <%= f.text_area :observacao, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit "Salvar", class: "btn btn-primary" %>
      <%= link_to clients_path, class: 'btn btn-default' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        Voltar
      <% end %>
    </div>
  </div>
<% end %>



<script type="text/javascript">
jQuery(function($){
    $("#client_cpf").mask("999.999.999.99");
});
</script>
