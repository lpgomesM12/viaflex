<%= form_for(@client, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @client.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <!-- <h4><%#= pluralize(@client.errors.count, "erro") %> Corrija os erros:</h4> -->

      <ul>
      <% @client.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="col-sm-2 control-label">Nome</label>
    <div class="col-sm-10">
      <%= f.text_field :nome, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Telefone1</label>
    <div class="col-sm-3">
      <%= f.text_field :telefone1, class: "form-control" %>
    </div>
    <label class="col-sm-1 control-label">Telefone2</label>
    <div class="col-sm-3">
      <%= f.text_field :telefone2, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">UF</label>
    <div class="col-sm-1">
      <%= f.text_field :desc_uf, class: "form-control" %>
    </div>
     <label class="col-sm-1 control-label">Cidade</label>
    <div class="col-sm-8">
      <%= f.text_field :nome_cidade, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Endereço</label>
    <div class="col-sm-10">
      <%= f.text_field :desc_endereco, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Bairro</label>
    <div class="col-sm-6">
      <%= f.text_field :nome_bairro, class: "form-control" %>
    </div>
     <label class="col-sm-1 control-label">Número</label>
     <div class="col-sm-1">
       <%= f.text_field :numr_endereco, class: "form-control" %>
     </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">CEP</label>
    <div class="col-sm-2">
      <%= f.text_field :desc_cep, class: "form-control" %>
    </div>
    <label class="col-sm-2 control-label">Ponto referência</label>
    <div class="col-sm-6">
      <%= f.text_field :desc_pontoreferencia, class: "form-control" %>
    </div>
  </div>
  <hr>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Salvar", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
