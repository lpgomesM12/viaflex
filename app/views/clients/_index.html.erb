<div class="page-header">


 <%= form_tag nil, method: 'GET' do %>
   <div class="row">
     <div class="col-lg-12">
       <div class="input-group">
         <input id="q" name="q" type="text" class="form-control" placeholder="Pesquise pelo o NOME, CPF ou CNPJ">
         <span class="input-group-btn">
           <button class="btn btn-success" type="submit" >Buscar</button>
         </span>
       </div><!-- /input-group -->
     </div><!-- /.col-lg-6 -->
   </div><!-- /.row -->
   <br />
 <% end %>

</div>

</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr>
            <th>Nome</th>
            <th>Tele1</th>
            <th>Tele2</th>
            <th>Nome cidade</th>
            <th>Endere√ßo</th>
            <th>Nome bairro</th>
            <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @clients) do |client| %>
            <td><%= client.nome %></td>
            <td><%= client.telefone1 %></td>
            <td><%= client.telefone2 %></td>
            <td><%= client.nome_cidade %></td>
            <td><%= client.desc_endereco %></td>
            <td><%= client.nome_bairro %></td>
            <td align='right'>
              <div class="btn-group">
                  <%= link_to client, class: "btn btn-default btn-sm" do %>
                    <span class="glyphicon glyphicon-list-alt text-success"></span> Exibir
                  <% end %>
                  <%= link_to edit_client_path(client), class: "btn btn-default btn-sm" do %>
                    <span class="glyphicon glyphicon-pencil text-primary"></span> Editar
                  <% end %>
              </div>
            </td>
      <% end %>
    </tbody>
  </table>
</div>
