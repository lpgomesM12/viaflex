<div class="page-header">
  <%= link_to new_service_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo serviço
  <% end %>
  <h3>Lista de serviço</h3>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr>
            <th>Serviço</th>
            <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @services) do |service| %>
            <td><%= service.nome_servico %></td>

            <td align='right'>
              <div class="btn-group">
                  <%= link_to service, class: "btn btn-default btn-sm" do %>
                    <span class="glyphicon glyphicon-list-alt text-success"></span> Exibir
                  <% end %>
                  <%= link_to  edit_service_path(service) , class: "btn btn-default btn-sm" do %>
                    <span class="glyphicon glyphicon-pencil text-primary"></span> Editar
                  <% end %>
                 <%= link_to service, method: :delete, data: { confirm: 'Deseja excluir o registro?' }, class: "btn btn-default btn-sm" do %>
                    <span class="glyphicon glyphicon-trash text-danger"></span> Excluir
                  <% end %>
              </div>
            </td>
      <% end %>
    </tbody>
  </table>
</div>
